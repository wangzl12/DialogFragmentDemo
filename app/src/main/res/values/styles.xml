<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="AppTextView.Black_66">
        <item name="android:textColor">@color/text_color_6</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTextView.Black_33">
        <item name="android:textColor">@color/text_color_3</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="AppButton">
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>


</resources>
