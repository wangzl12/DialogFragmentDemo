<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_3">

        <TextView
            style="@style/AppTextView"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="确认购买"
            android:textColor="@color/text_color_3"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/dialog_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_2"
            android:padding="@dimen/margin_1"
            android:src="@mipmap/close_img" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_2"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/AppTextView.Black_66"
                android:layout_margin="@dimen/margin_1"
                android:text="产品名称"
                android:textSize="@dimen/dialog_submit_size" />

            <TextView
                style="@style/AppTextView.Black_66"
                android:layout_margin="@dimen/margin_1"
                android:text="购买金额/元"
                android:textSize="@dimen/dialog_submit_size" />
            <TextView
                style="@style/AppTextView.Black_66"
                android:layout_margin="@dimen/margin_1"
                android:text="产品名称"
                android:textSize="@dimen/dialog_submit_size" />

            <TextView
                style="@style/AppTextView.Black_66"
                android:layout_margin="@dimen/margin_1"
                android:text="购买金额/元"
                android:textSize="@dimen/dialog_submit_size" />
            <TextView
                style="@style/AppTextView.Black_66"
                android:layout_margin="@dimen/margin_1"
                android:text="产品名称"
                android:textSize="@dimen/dialog_submit_size" />

            <TextView
                style="@style/AppTextView.Black_66"
                android:layout_margin="@dimen/margin_1"
                android:text="购买金额/元"
                android:textSize="@dimen/dialog_submit_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialog_confirm_item_01"
                style="@style/AppTextView.Black_33"
                android:layout_margin="@dimen/margin_1"
                android:lines="1"
                android:text="产品名称"
                android:textSize="@dimen/dialog_submit_size" />

            <TextView
                android:id="@+id/dialog_confirm_item_02"
                style="@style/AppTextView.Black_33"
                android:layout_margin="@dimen/margin_1"
                android:lines="1"
                android:text="购买金额/元"
                android:textSize="@dimen/dialog_submit_size" />
            <TextView
                style="@style/AppTextView.Black_66"
                android:layout_margin="@dimen/margin_1"
                android:text="产品名称"
                android:textSize="@dimen/dialog_submit_size" />

            <TextView
                style="@style/AppTextView.Black_66"
                android:layout_margin="@dimen/margin_1"
                android:text="购买金额/元"
                android:textSize="@dimen/dialog_submit_size" />
            <TextView
                style="@style/AppTextView.Black_66"
                android:layout_margin="@dimen/margin_1"
                android:text="产品名称"
                android:textSize="@dimen/dialog_submit_size" />

            <TextView
                style="@style/AppTextView.Black_66"
                android:layout_margin="@dimen/margin_1"
                android:text="购买金额/元"
                android:textSize="@dimen/dialog_submit_size" />

        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/dialog_product_confirm_btn"
        style="@style/AppButton"
        android:layout_marginBottom="@dimen/margin_3"
        android:layout_marginLeft="@dimen/margin_8"
        android:layout_marginRight="@dimen/margin_8"
        android:layout_marginTop="@dimen/margin_3"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="确定" />

</LinearLayout>
